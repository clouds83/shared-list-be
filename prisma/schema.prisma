// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String           @id @default(uuid())
  email             String           @unique
  firstName         String
  lastName          String
  password          String
  subscriptionId    String?  
  createdAt         DateTime?        @default(now())
  updatedAt         DateTime?        @updatedAt

  @@map("users")
  subscription      Subscription?    @relation("Subscription", fields: [subscriptionId], references: [id])
  ownedSubscription Subscription?    @relation("Owner")
}

model Subscription {
  id                String           @id @default(uuid())
  ownerId           String           @unique 
  createdAt         DateTime?        @default(now())
  updatedAt         DateTime?        @updatedAt

  @@map("subscriptions")
  users             User[]           @relation("Subscription")
  owner             User             @relation("Owner", fields: [ownerId], references: [id])
  items             Item[]           // Add this line
}

model Item {
  id                String           @id @default(uuid())
  subscriptionId    String
  name              String
  isBought          Boolean?         @default(false)
  quantity          Int?
  unit              String?
  category          String?
  price1Name        String?
  price2Name        String?
  price3Name        String?
  price1            Float?
  price2            Float?
  price3            Float?
  createdAt         DateTime?        @default(now())
  updatedAt         DateTime?        @updatedAt

  @@map ("items")
  subscription      Subscription     @relation(fields: [subscriptionId], references: [id]) // Updated relation
}
